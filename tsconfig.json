{
    "compilerOptions": {
      "composite": true,
      "sourceMap": true,
      "target": "es6",
      "module": "commonjs",
      "skipLibCheck": true,
      "strict": false,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true
    }
  }
  
